<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn2.buyacar.co.uk/sites/buyacar/files/car-parking-3000.jpg);">
  <div class="container">
    <h1><strong>Go further!</strong></h1>
    <p>Minimalism does not require you to sacrifice comfort</p>
  </div>
</div>


<div class="container mr-0 ml-1">
  <div id="core" class="row">
    <div id="sidecard" class="col-12 col-lg-8">
        <div class="cards">
          <% @cars.each do |car| %>
            <%if car.picture.attached?%>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path car.picture.key %>);">

            <% else %>
               <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path("cljrhhc1oa9pnj9hcvv1") %>);">

            <% end %>
                <div class="container">
                    <%= car.model %>
                    <%= link_to 'view', car_path(car) %>
                </div>
              </div>
            <% end %>
        </div>
      </div>
    <div id="sidemap"class="col-12 col-lg-4">
      <div id= "map" style="width: 100%; height: 760px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>


