<div class="banner">
  <h1>Rent a car !</h1>
  <p>See all the available cars</p>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 col-lg-8">
        <div class="cards">
          <% @cars.each do |car| %>
            <div class="card" style="width: 20rem;">
                <img class="card-img-top" src="https://m.extra.globo.com/incoming/17357332-fa6-89f/w488h275-PROP/capa-de-carro.jpg" alt="Card image cap">
                 <div class="card-body border-top">
                  <div class="d-flex justify-content-between align-items-flex-end">
                    <div>
                      <h5 class="card-title"><%= car.model %></h5>
                      <p class="card-text"><%="#{car.year} with #{car.km} km"%>
                    </div>
                      <div>
                      <%= link_to 'rent', car_path(car), class: "btn btn-outline-secondary"%>
                      </div>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
        </div>
      </div>
    <div class="col-12 col-lg-4">
      <div id= "map">
       MAP
      </div>
    </div>
  </div>
</div>


